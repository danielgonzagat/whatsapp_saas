# ============================================
# KLOEL BACKEND - Variáveis de Ambiente
# ============================================

# ============================================
# Database (PostgreSQL + pgvector)
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/whatsapp_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=whatsapp_saas

# ============================================
# Redis (Cache + Queues)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT Authentication
# ============================================
# IMPORTANTE: Altere para uma chave segura em produção!
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# WhatsApp API (chrishubert/whatsapp-api)
# ============================================
# URL interna do container
WHATSAPP_API_URL=http://whatsapp-api:3000
# Para acesso externo ao docker
# WHATSAPP_API_URL=http://localhost:3004

# Chave de API para autenticação
WHATSAPP_API_KEY=kloel-whatsapp-api-key

# ============================================
# Stripe (Pagamentos)
# ============================================
# Obter em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Price IDs para cada plano
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# Modo mock (para desenvolvimento sem Stripe real)
BILLING_MOCK_MODE=true

# ============================================
# OpenAI (GPT-4o para Kloel/Autopilot)
# ============================================
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o

# ============================================
# Email (Nodemailer/SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Kloel <noreply@kloel.com>

# ============================================
# Frontend URL (para redirects)
# ============================================
FRONTEND_URL=http://localhost:3005

# ============================================
# Sentry (Monitoramento de erros - opcional)
# ============================================
SENTRY_DSN=

# ============================================
# Ambiente
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# Autopilot Limits
# ============================================
AUTOPILOT_CONTACT_DAILY_LIMIT=5
AUTOPILOT_WORKSPACE_DAILY_LIMIT=1000
AUTOPILOT_SILENCE_HOURS=24

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100
